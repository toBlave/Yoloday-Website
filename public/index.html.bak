<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width,initial-scale=1"/>
<title>Yoloday | Imagine • Plan • Go</title>
<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@700;900&display=swap" rel="stylesheet">
<style>
  html, body { 
    height: 100%; margin: 0; background: #fff; 
    overflow-x: hidden; overflow-y: hidden; 
  }
  body { font-family: "Nunito", sans-serif; color: #2c3e50; }
  
  :root {
    --hero-size: clamp(48px, 10vw, 110px);
    --dot-size: clamp(48px, 10vw, 110px);
  }

  .stage { 
    position: relative; width: 100vw; height: 100vh; 
    display: flex; justify-content: center; align-items: center;
    z-index: 10;
  }

  /* --- WORD CLOUDS --- */
  .word {
    position: absolute; transform: translate(-50%, -50%) scale(.9);
    font-weight: 700; color: #000; opacity: 0; white-space: nowrap;
    animation: cloudFadeIn 1.1s ease forwards;
    font-size: clamp(14px, 2.5vw, 22px);
  }
  @keyframes cloudFadeIn { to { opacity: 0.35; transform: translate(-50%, -50%) scale(1); } }
  .fade-out-cloud { animation: cloudFadeOut 0.8s ease forwards !important; }
  @keyframes cloudFadeOut { to { opacity: 0; transform: translate(-50%, -60%) scale(0.9); } }

  /* --- HERO ELEMENTS --- */
  .hero-container {
    position: absolute; display: flex; align-items: center;
    font-size: var(--hero-size); font-weight: 900;
    white-space: nowrap; opacity: 0; z-index: 20;
    pointer-events: none;
  }

  #yolo { left: 15vw; top: 35vh; transform: translate(-50%, -50%) scale(0.8); }
  #holiday { left: 85vw; top: 65vh; transform: translate(-50%, -50%) scale(0.8); }

  .show-hero { 
    opacity: 1 !important; transform: translate(-50%, -50%) scale(1) !important;
    transition: opacity 0.6s ease, transform 0.8s cubic-bezier(.17,.67,.26,1.2); 
  }

  .holi {
    display: inline-block; overflow: hidden;
    transition: width 0.5s cubic-bezier(.65,0,.35,1), opacity 0.3s;
  }
  .holi.vanish { width: 0 !important; opacity: 0; }

  /* --- PHYSICS --- */
  .v-center { top: 50vh !important; transition: top 0.7s cubic-bezier(.65,0,.35,1); }
  .collide-yolo { left: 50vw !important; transform: translate(-100%, -50%) !important; transition: left 0.5s cubic-bezier(.4, 0, .2, 1); }
  .collide-day { left: 50vw !important; transform: translate(0%, -50%) !important; transition: left 0.5s cubic-bezier(.4, 0, .2, 1); }
  .rebound-yolo { transform: translate(-120%, -50%) !important; transition: transform 0.4s cubic-bezier(0.2, 0.9, 0.3, 1); }
  .rebound-day { transform: translate(20%, -50%) !important; transition: transform 0.4s cubic-bezier(0.2, 0.9, 0.3, 1); }

  .dot {
    position: absolute; left: 50vw; top: 50vh;
    transform: translate(-50%, -50%) scale(0);
    font-size: var(--dot-size); font-weight: 900; opacity: 0;
  }
  .dot.visible { opacity: 1; transform: translate(-50%, -50%) scale(1); transition: all 0.3s cubic-bezier(0.17, 0.88, 0.32, 1.4); }
  .dot.pop { transform: translate(-50%, -50%) scale(2.5); opacity: 0; transition: all 0.2s ease-in; }

  /* --- BRAND TRANSITION --- */
  #merged-yoloday {
    position: absolute; left: 50vw; top: 50vh;
    transform: translate(-50%, -50%);
    font-size: var(--hero-size); font-weight: 900;
    display: none; z-index: 30; opacity: 1;
    white-space: nowrap;
  }

  .final-snap { 
    top: 5vh !important; /* Move to top edge */
    opacity: 0 !important; /* Fade out as image fades in */
    transition: all 1.4s cubic-bezier(0.65, 0, 0.35, 1);
    transform: translate(-50%, -50%) scale(0.4) !important;
  }

  #splash-img {
    position: absolute; top: 22vh; left: 50%; /* Position at top of viewport */
    transform: translate(-50%, -50%);
    width: 95%; max-width: 700px; opacity: 0;
    transition: opacity 1.8s ease; z-index: 5;
  }

  .business-content {
    margin-top: 45vh; padding: 20px 20px 100px;
    max-width: 900px; margin-left: auto; margin-right: auto;
    opacity: 0; transition: opacity 1.2s ease 1s;
  }

  .prop-section {
    background: #ffffff; border-radius: 28px; padding: 45px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.04); border: 1px solid #f2f2f2;
  }

  .hero-statement {
    font-size: clamp(1.4rem, 4vw, 1.8rem); font-weight: 900;
    color: #e53935; margin-bottom: 25px; text-align: center;
  }

  .grid { display: grid; grid-template-columns: 1fr 1fr; gap: 40px; margin-top: 30px; }

  @media (max-width: 768px) {
    .grid { grid-template-columns: 1fr; gap: 20px; }
    .final-snap { top: 4vh !important; }
    .business-content { margin-top: 40vh; }
    #splash-img { top: 20vh; }
  }

  h3 { color: #4285F4; font-weight: 900; margin-bottom: 15px; font-size: 1.3rem; }
  ul { padding-left: 18px; list-style-type: none; }
  li { margin-bottom: 15px; position: relative; }
  li::before { content: "•"; color: #34A853; font-weight: bold; position: absolute; left: -18px; }
  strong { color: #34A853; }

  /* COLORS */
  .c1{color:#e53935} .c2{color:#f39c34} .c3{color:#f1c40f} .c4{color:#43a047}
  .c5{color:#4285F4} .c6{color:#34A853} .c7{color:#FBBC05}
</style>
</head>
<body>

  <div class="stage" id="stage">
    <div id="yolo" class="hero-container">
      <span class="c1">Y</span><span class="c2">o</span><span class="c3">l</span><span class="c4">o</span>
    </div>
    
    <div id="holiday" class="hero-container">
      <div class="holi" id="holi-text"><span class="c5">H</span><span class="c6">o</span><span class="c7">l</span><span class="c1">i</span></div>
      <div class="day-text"><span class="c5">d</span><span class="c6">a</span><span class="c7">y</span></div>
    </div>

    <div id="merged-yoloday">
      <span class="c1">Y</span><span class="c2">o</span><span class="c3">l</span><span class="c4">o</span><span class="c5">d</span><span class="c6">a</span><span class="c7">y</span>
    </div>

    <div id="dot" class="dot">.</div>
  </div>

  <div id="business-prop" class="business-content">
    <div class="prop-section">
      <div class="hero-statement">The Seamless "Central Nervous System" for Travel [cite: 2]</div>
      <p>Yoloday is a new entrant to the travel market, offering a one-stop itinerary planning experience[cite: 3]. By moving prompt engineering to the backend, we deliver a natural, click-and-choose experience that eliminates chatbot fatigue[cite: 6, 31, 34].</p>

      <div class="grid">
        <div>
          <h3>Imagine & Plan</h3>
          <ul>
            <li><strong>Ambient AI:</strong> Consolidates preferences through a guided wizard without reliance on chatbots[cite: 4, 22, 34].</li>
            <li><strong>Media Enrichment:</strong> Access photos and embedded videos directly within the planning process[cite: 26, 45].</li>
            <li><strong>Rapid Itineraries:</strong> Move from an initial idea to a structured, editable daily plan instantly[cite: 9, 38, 44].</li>
          </ul>
        </div>
        <div>
          <h3>Why Yoloday?</h3>
          <ul>
            <li><strong>Integrated Platform:</strong> One unified platform instead of bouncing between maps, blogs, and spreadsheets[cite: 46].</li>
            <li><strong>Global Readiness:</strong> Primary global domain (yolo.day) ready for swift worldwide expansion[cite: 10, 11].</li>
            <li><strong>Loyalty Model:</strong> A portion of booking commissions is returned to users as repeat-business credits[cite: 16, 57].</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

<script>
(() => {
  const stage = document.getElementById('stage');
  const yolo = document.getElementById('yolo');
  const holiday = document.getElementById('holiday');
  const holiText = document.getElementById('holi-text');
  const merged = document.getElementById('merged-yoloday');
  const dot = document.getElementById('dot');
  const wait = ms => new Promise(res => setTimeout(res, ms));

  // Preload splash image
  const splashImg = new Image();
  splashImg.src = 'images/splash.png';
  splashImg.id = 'splash-img';

  const yoloPhrases = ["Pave your way","Write your story","Live your epic","Envision","Imagine","Launch","Take the leap","Start now","Follow your spark","Create your future","See what’s possible","Answer the call","Step forward","Go beyond","Make it real","Claim your moment","Trust your direction","Shape your story","Step into it","Make your move","Dare to begin","Chase the moment"];
  const holidayPhrases = ["Getaway","Escape","Break","Retreat","Time off","Unwind","Recharge","Reset","Rest","Relax","Switch off","Slow down","Take a breather","Adventure","Trip","Journey","Holiday mode","Sunshine","Wanderlust","Staycation","Weekend away","Pause","Breathe","Joy","Explore","Wander"];

  function buildClouds() {
    const w = window.innerWidth, h = window.innerHeight;
    const goldenAngle = Math.PI * (3 - Math.sqrt(5));
    const maxRadius = Math.min(w, h) * (w < 600 ? 0.45 : 0.35);

    const createSet = (phrases, centerX, centerY) => {
      phrases.forEach((txt, i) => {
        const el = document.createElement("div");
        el.className = "word";
        el.textContent = txt;
        const angle = i * goldenAngle;
        const radius = maxRadius * Math.sqrt(i / phrases.length);
        el.style.left = (centerX + Math.cos(angle) * radius) + "px";
        el.style.top = (centerY + Math.sin(angle) * radius) + "px";
        el.style.animationDelay = (i * 70) + "ms";
        stage.appendChild(el);
      });
    };
    createSet(yoloPhrases, w * 0.25, h * 0.45);
    createSet(holidayPhrases, w * 0.75, h * 0.55);
  }

  async function run() {
    buildClouds();
    await wait(2400);
    yolo.classList.add('show-hero'); holiday.classList.add('show-hero');
    await wait(1000);
    document.querySelectorAll('.word').forEach(w => w.classList.add('fade-out-cloud'));
    await wait(600);
    yolo.classList.add('v-center'); holiday.classList.add('v-center');
    await wait(800);
    holiText.style.width = holiText.offsetWidth + 'px'; await wait(20);
    holiText.classList.add('vanish');
    yolo.classList.add('collide-yolo'); holiday.classList.add('collide-day');
    await wait(500); 
    yolo.classList.add('rebound-yolo'); holiday.classList.add('rebound-day');
    await wait(150); dot.classList.add('visible');
    await wait(2000); dot.classList.add('pop');
    await wait(200);
    yolo.style.display = 'none'; holiday.style.display = 'none';
    merged.style.display = 'block';
    await wait(100);
    merged.classList.add('final-snap');
    stage.appendChild(splashImg);
    await wait(400); splashImg.style.opacity = "1";
    document.getElementById('business-prop').style.opacity = "1";
    document.body.style.overflowY = "auto";
  }
  run();
  window.addEventListener('resize', () => { location.reload(); });
})();
</script>
</body>
</html>